#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>

void reverse(const char* const sPtr);

int main(){
  char sentence[1000];
  char reverse_sentence[1000];
  
  fgets(sentence, 1000, stdin);
  
  reverse(sentenece);
  
  reverse_sentence = sentence;
  

system('pause');
}

void reverse(const char* const sPtr){
  if(sPtr[0] == '\0'){
    return;
  }
  else{
    reverse(&sPtr[1]);
  }
}

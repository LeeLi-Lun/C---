#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#define SIZE 1000


int main(){
  size_t i ;
  size_t j ;
  size_t k ;
  int a = 0;
  char sentence[SIZE];
  char alpha[SIZE]
  char alphas[SIZE];
  
  fgets(sentence, SIZE, stdin);
  
  for(i = 0 ;i < SIZE; i++){
    if(isalpha( sentence[i] )){
     alpha[a++] = sentence[i];
    }
  }
  
  for(j = 0 ;j < SIZE; j++)
     alphas[j] = toupper( alpha[j] );
  
  for(k = SIZE-1; k >= 0, k--)
    reverse_alpha[ (-k)+(SIZE-1) ] = alphas[k];
    
    reverse_alpha[SIZE] ='\0';

system('pause');
}



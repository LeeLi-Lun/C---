#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#define SIZE 100


int main(){
  size_t i ;
  size_t j ;
  size_t k ;
  int a = 0;
  int b = 0;
  char sentence[SIZE];
  char alpha[SIZE];
  char upper_alpha[SIZE];
  char reverse_alpha[SIZE];
  
  fgets(sentence, SIZE, stdin);
  
  for(i = 0 ;i < SIZE; i++){
    if(isalpha( sentence[i] )){
     alpha[a++] = sentence[i];
    }
  }
  
  for(j = 0 ;j < SIZE; j++)
     upper_alpha[j] = toupper( alpha[j] );
     
     
  for(k = SIZE -1 ; k >=0 ; k--)
    reverse_alpha[b++] = upper_alpha[k];
    
  reverse_alpha[b] = '\0';
    
  if(upper_alpha == reverse_alpha){
  	puts( sentence ); 
  }

system("pause");
}



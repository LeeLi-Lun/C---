#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#define SIZE 1000


int main(){
  size_t i;
  size_t j;
  char sentence[SIZE];
  char alpha[SIZE]
  char reverse_alpha[SIZE];
  
  fgets(sentence, SIZE, stdin);
  
  for(i = 0 ;i < SIZE; i++){
    if(isalpha( sentence[i] )){
     alpha[i] = sentence[i];
    }
  }
  
  for(j = SIZE-1; j >= 0, j--)
    reverse_alpha[ (-j)+(SIZE-1) ] = alpha[j];
    
  reverse_alpha[SIZE] ='\0';
  
  strstr(alpha, reverse_alpha);

system('pause');
}



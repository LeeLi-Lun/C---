
#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int main(){
	
	int bomb;
	int n1;
	int n2;
	size_t i;
	
	srand(time(NULL));
	
	char surface[10][10]={'0'};
 		
	bomb = 21 + rand() % 10;
	
	for(i = 1 ; i <=bomb ; i++){
		n1 = 1 + rand() % 10;
 		n2 = 1 + rand() % 10;
 		surface[n1][n2] = {'@'};
 		
 	}
	
	system("pause");	
}



#include <stdlib.h>
#include <stdio.h>

typedef struct{
	int  speed;
	int  on;
	double radius;
	const char * color;
}Fan;

enum speeds { SLOW, MEDIUM, FAST};
char * toString (Fan wFan);

int main(){
   Fan fan1;
   Fan fan2;
  
  const char *on[] = {"ture","flase"};
  
  const char *colors[] = {"yellow","blue"};
  
  fan1.speed = FAST; 
  fan1.on = 0;
  fan1.radius = 10.0;
  fan1.color = colors[0];
  
  fan2.speed = MEDIUM; 
  fan2.on = 1;
  fan2.radius = 5.0;
  fan2.color = colors[1];
  
  toString(fan1);
  toString(fan2);
  
  system("pause");
}

char * toString (Fan wFan){
	const char *speedss[] = {"slow","medium","fast"};
	
    if(wFan.on == 0 ){
		printf("%s%s %s%s %s%.2f\n","Speed:",speedss[wFan.speed],
				"Color:", wFan.color, "Radius:", wFan.radius);
	}
	else{
		printf("%s %s%s %s%.2f\n","The fan is off", "Color:", wFan.color, 
				"Radius:", wFan.radius);
	}
	
}

  



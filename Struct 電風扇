  #include <stdlib.h>
#include <stdio.h>

typedef struct{
	int  speed;
	int  on;
	double radius;
	char * color;
}Fan;

char * toString (Fan wFan);

int main(){
  struct Fan fan1;
  struct Fan fan2;
  
  const char *speeds[] = {"SLOW","MEDIUM","FAST"};
  
  const char *on[] = {"ture","flase"};
  
  const char *colors[] = {"yellow","blue"};
  
  fan1.speed = 2; 
  fan1.on = 0;
  fan1.radius = 10.0;
  fan1.color = color[1];
  
  fan2.speed = 1; 
  fan2.on = 1;
  fan2.radius = 5.0;
  fan2.color = color[2];
  
  toString(fan1);
  toString(fan2);
  
}

char * toString (Fan wFan){
    if(wFan.on == 0 {
		printf("%s%s %s%s %s%d","Speed:",speeds[fan1.speed],
				"Color:", fan1.color, "Radius", fan1.radius);
	}
	else{
		printf("%s %s%s %s%d","The fan is off", "Color:", fan2.color, 
				"Radius", fan2.radius);
	}
	
}

  




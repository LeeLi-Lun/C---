//

#include "stdafx.h"
#include "stdio.h"

int _tmain(int argc, _TCHAR* argv[])
{
	int number;
	int i;
	int j;
	int counter;
	scanf_s("%d", &number);

	for (counter = 1; counter <= number; ++counter){
		for (j = number; j >= counter; j--){
			printf(" ");
		}
		for (i = 1; i <= (2*counter) - 1; ++i){
			printf("%c", '*');
		}
		printf("\n");
	}

	return 0;
}

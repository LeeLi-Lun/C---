// U10216012.cpp : 定義主控台應用程式的進入點。
//

#include "stdafx.h"
#include <stdio.h>
#include <stdlib.h>

int f(int x, int y, int z);
int g(int x);
int h(int x);

int main(){
	int x;
	int y;
	int z;

	puts("Please enter a numuber x , -300 < x < 300:");
	scanf_s("%d", &x);
	y = h(x);
	z = g(x);
	printf("%d", f(x, y ,z));
}

int f(int x, int y, int z){
	
	if (y < x){
		return f(x-1,) - y;
	}

	else if (y > x){
		return f(g(x)) - z;
	}

	else{
		return 1 ;
	}
}

int g(int y){
	if (y <= 2){
		return -1;
	}
	else{
		return 2 + h(y - 1) - h(y - 2);
	}
}

int h(int z){

	if (z <= 2){
		return z*z - 1;
	}
	else{
		return 2;
	}
}
